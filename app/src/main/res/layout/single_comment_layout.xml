<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageSingleComment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_account_box_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        android:layout_toEndOf="@+id/userImageSingleComment"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/singleCommentCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="25dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E0E9E9"
            android:layout_toEndOf="@+id/userImageSingleComment">

            <TextView
                android:id="@+id/userNameSingleComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:textColor="@android:color/black"
                android:text="Rahul"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/singleComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="20dp"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:text="Comment" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</RelativeLayout>